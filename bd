-- Remove antigos campos não usados
ALTER TABLE usuarios
    DROP COLUMN altura,
    DROP COLUMN peso,
    DROP COLUMN hora_dormir,
    DROP COLUMN hora_acordar;

-- Adiciona os novos campos com restrições e padrão
ALTER TABLE usuarios
    ADD COLUMN data_nascimento DATE NOT NULL DEFAULT '2000-01-01',
    ADD COLUMN nacionalidade VARCHAR(100) NOT NULL,
    ADD COLUMN profissao VARCHAR(100) NOT NULL,
    ADD COLUMN telefone VARCHAR(20) DEFAULT NULL;
